<idea-plugin>
    <name>Defold</name>
    <id>com.defold.IntelliJ-Defold</id>
    <vendor email="" url="https://www.defold.com">Defold</vendor>
    <description><![CDATA[
      Minimal skeleton for Defold integration. Provides no UI yet.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <!-- Depend on EmmyLua2 to use its PSI in evaluator/range detection -->
    <depends>com.cppcxy.Intellij-EmmyLua</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Start detection after the project is opened -->
        <postStartupActivity implementation="com.aridclown.intellij.defold.DefoldProjectActivity"/>
        <fileIconProvider implementation="com.aridclown.intellij.defold.util.DefoldFileIconProvider"/>
        <projectOpenProcessor implementation="com.aridclown.intellij.defold.DefoldProjectOpenProcessor"/>
        <fileTemplateGroup
                implementation="com.aridclown.intellij.defold.templates.DefoldFileTemplateGroupDescriptorFactory"/>
        <internalFileTemplate name="Script"/>
        <internalFileTemplate name="GUI Script"/>
        <internalFileTemplate name="Render Script"/>
        <internalFileTemplate name="Lua Module"/>
        <internalFileTemplate name="Editor Script"/>

        <!-- Notification group for Defold notifications -->
        <notificationGroup id="Defold" displayType="BALLOON"/>

        <applicationService serviceImplementation="com.aridclown.intellij.defold.settings.DefoldSettings"/>
        <applicationConfigurable
                groupId="language"
                instance="com.aridclown.intellij.defold.settings.DefoldSettingsConfigurable"
                displayName="Defold"
                id="Defold.Settings"/>

        <!-- debugger -->
        <configurationType implementation="com.aridclown.intellij.defold.debugger.DefoldMobDebugConfigurationType"/>
        <programRunner implementation="com.aridclown.intellij.defold.debugger.ProjectDebugProgramRunner"/>
        <programRunner implementation="com.aridclown.intellij.defold.debugger.ProjectRunProgramRunner"/>
        <completion.contributor language="Lua"
                                implementationClass="com.aridclown.intellij.defold.debugger.MobDebugCompletionContributor"/>
        <runConfigurationProducer
                implementation="com.aridclown.intellij.defold.debugger.MobDebugConfigurationProducer"/>
    </extensions>

    <actions>
        <group id="Defold.NewScriptGroup">
            <add-to-group group-id="NewGroup" anchor="first"/>

            <action id="Defold.NewScript"
                    class="com.aridclown.intellij.defold.templates.CreateDefoldScriptFileAction"
                    text="Defold Script File"
                    description="Create a new Defold script file">
            </action>
            <separator/>
        </group>

        <group id="Defold.HotReloadGroup">
            <add-to-group group-id="FileMenu" relative-to-action="PowerSaveGroup" anchor="before"/>

            <separator/>
            <action id="Defold.HotReload"
                    class="com.aridclown.intellij.defold.actions.HotReloadAction"
                    icon="AllIcons.Actions.Refresh"
                    text="Hot Reload"
                    description="Reload modified resources in running Defold game">
                <keyboard-shortcut keymap="$default" first-keystroke="alt R"/>
            </action>
        </group>

        <group id="Defold.ProjectMenu"
               class="com.aridclown.intellij.defold.actions.DefoldProjectMenuGroup"
               popup="true"
               text="Project"
               description="Defold project actions">
            <action id="BuildDefoldProject"
                    text="Build"
                    icon="AllIcons.Actions.Compile"
                    class="com.aridclown.intellij.defold.actions.BuildProjectAction">
                <keyboard-shortcut keymap="$default" first-keystroke="alt B" replace-all="true"/>
            </action>
            <action id="CleanBuildDefoldProject"
                    text="Clean Build"
                    icon="AllIcons.Actions.Rebuild"
                    class="com.aridclown.intellij.defold.actions.CleanBuildProjectAction">
                <keyboard-shortcut keymap="$default" first-keystroke="alt shift B" replace-all="true"/>
            </action>
            <reference ref="Synchronize"/>
            <separator/>
            <action id="OpenDefoldEditor"
                    text="Open Defold Editor"
                    class="com.aridclown.intellij.defold.actions.OpenDefoldEditorAction">
                <keyboard-shortcut keymap="$default" first-keystroke="alt O" replace-all="true"/>
            </action>

            <add-to-group group-id="MainMenu" anchor="after" relative-to-action="ViewMenu"/>
        </group>

        <action id="Defold.OpenEditor"
                text="Defold Editor"
                popup="true"
                icon="com.aridclown.intellij.defold.util.DefoldIcons.defoldBlueIcon"
                class="com.aridclown.intellij.defold.actions.OpenDefoldEditorAction">
            <add-to-group group-id="RevealGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
